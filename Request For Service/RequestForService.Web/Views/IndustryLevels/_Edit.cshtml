@using RequestForService.Web.Extentions
@model RequestForService.Models.BusinessEntities.IndustryLevel
@{
	List<RequestForService.Models.BusinessEntities.IndustryArea> industryAreas
		= (ViewBag.IndustryAreas as List<RequestForService.Models.BusinessEntities.IndustryArea>)
		  ?? (ViewBag.IndustryAreas = new List<RequestForService.Models.BusinessEntities.IndustryArea>());
}
<div class="form-group">
	@Html.LabelFor(model => model.IndustryAreaId, new {@class = "control-label col-md-2"})
	<div class="col-md-12">
		@Html.DropDownListFor(model => model.IndustryAreaId,
			industryAreas.ToSelectList(i => i.Id, i => i.Name, Model != null ? Model.IndustryAreaId : Guid.Empty),
			"Please select...")
		@Html.ValidationMessageFor(model => model.IndustryAreaId)
	</div>
</div>
<div class="form-group">
	@Html.LabelFor(model => model.LevelOrder, new {@class = "control-label col-md-2"})
	<div class="col-md-12">
		@Html.EditorFor(model => model.LevelOrder)
		@Html.ValidationMessageFor(model => model.LevelOrder)
	</div>
</div>
<div class="form-group">
	@Html.LabelFor(model => model.Name, new {@class = "control-label col-md-2"})
	<div class="col-md-12">
		@Html.EditorFor(model => model.Name)
		@Html.ValidationMessageFor(model => model.Name)
	</div>
</div>
<div class="form-group">
	@Html.LabelFor(model => model.Description, new {@class = "control-label col-md-2"})
	<div class="col-md-12">
		@Html.EditorFor(model => model.Description)
		@Html.ValidationMessageFor(model => model.Description)
	</div>
</div>